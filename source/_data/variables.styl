// Title Font, set it to font family you want.
$font-family-headings = Georgia, sans

// Set it to font family you want.
$font-family-base = Noto Serif SC, "Microsoft YaHei", Verdana, sans-serif

// Code Font.
$code-font-family = Fira Code, Roboto Mono, "Input Mono", "PT Mono", Consolas, Monaco, Menlo, monospace

// Font size of articles.
$font-size-base = 14px

// Font size of table and code.
$table-font-size = 12px